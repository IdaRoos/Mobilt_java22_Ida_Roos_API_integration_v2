<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment1layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#B951BAC8"
    android:gravity="center">

    <!-- Textvy för stad -->
    <TextView
        android:id="@+id/cityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stad:"
        android:textSize="18sp" />

    <!-- Textvy för temperatur -->
    <TextView
        android:id="@+id/temperatureTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperatur:"
        android:textSize="18sp" />

    <!-- Textvy för väder -->
    <TextView
        android:id="@+id/currentWeatherTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Väder:"
        android:textSize="18sp" />

    <!-- Knapp för att hämta detaljerat väder -->
    <Button
        android:id="@+id/getDetailsButton"
        android:layout_width="203dp"
        android:layout_height="71dp"
        android:text="Get detailed weather" />

</LinearLayout>
